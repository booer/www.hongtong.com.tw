<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <title>GrowthTw</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body >
    <div class="topbar clearfix">
			<div class="container">
				<div class="row-fluid mb-5">
					<div class="col-md-12">
						<div class="pull-left">
							<div class="contactwrap text-left">
								<ul class="list-inline">
									<li><i class="fa fa-phone"></i> Call Us : <%= @site.tel %></li>
									<li><i class="fa fa-envelope"></i> Email Us : <%= @site.mail %></li>
								</ul>
							</div><!-- end contactwrap -->
						</div><!-- end col -->

						<div class="pull-right">
							<ul class="social">
								<li class="traditional chinese"><a href="#">中文</a></li>
								<li class="English"><a href="#">EN</a></li>
							</ul>
						</div><!-- end col -->
					</div>
				</div><!-- end row -->
			</div><!-- end container -->
	</div><!-- end topbar -->

	<header id="headeraffix" class="header" data-spy="affix" data-offset-top="60" data-offset-bottom="200">
				<div class="container">
					<div class="row mb-5">
						<div class="col-md-12">
							<nav class="yamm navbar navbar-default" role="navigation">
								<div class="container-fluid">
									<div class="navbar-table">
										<div class="navbar-cell tight">
											<div class="navbar-header">
												<%= link_to index_url do %>
													<img src="/assets/logo.jpeg" alt="Ova">
												<% end %>
												<div>
													<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
														<span class="sr-only">Toggle navigation</span>
														<span class="fa fa-bars"></span>
													</button>
												</div>
											</div><!-- end navbar-header -->
										</div><!-- end navbar-cell -->

										<div class="navbar-cell stretch">
											<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
												<div class="navbar-cell">
													<ul class="nav navbar-nav navbar-right">
														<li class="dropdown yamm-fw">
															<%=link_to '關於我們', about_path %>
														<ul class="dropdown-menu">
															<li>
																<div class="yamm-content">
																	<div class="row">
																		<div class="col-md-12 col-xs-12 nopadding">
																			<div class="box">
																				<ul>
																					<li><%=link_to '公司簡介', about_path %></li>
																					<li><%=link_to '公司沿革', history_path %></li>
																				</ul>
																			</div><!-- end box -->
																		</div><!-- end col -->
																	</div>
																</div>
															</li>
														</ul>
														<li class="dropdown yamm-fw">
															<%=link_to '產品介紹', products_path %>
														</li>
														<li class="dropdown yamm-fw">
															<%=link_to '最新消息', posts_path %>
														</li>		

														<li class="dropdown yamm-fw">					
															<%=link_to '聯絡我們', contact_path %>
														</li>												
													</ul>
												</div><!-- end navbar-cell -->
											</div><!-- /.navbar-collapse -->        
										</div><!-- end navbar cell -->
									</div><!-- end navbar-table -->
								</div><!-- end container fluid -->
							</nav><!-- end navbar -->
						</div><!-- end col -->
					</div><!-- end row -->
				</div><!-- end container -->
	</header>
	<div id="wrapper">
		<%= yield %>
		<section class="copyrights">
			<div class="container">
				<div class="row">
					<div class="col-md-6">
						
					</div>
					<div class="col-md-6 text-right">
						<p>Copyright © 2016 HIT HongTong All rights reserved.</p>
					</div>
				</div><!-- end row -->
			</div><!-- end container -->
		</section><!-- end copyrights -->

	    <div class="backtotop">Scroll to Top</div>

	</div><!-- end wrapper -->
 		

</body>
</html>
