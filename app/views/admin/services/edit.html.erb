<%= render 'admin/common/header' %>
<section>
  <%= render 'admin/common/leftpanel' %>
  <div class="mainpanel">
    <div class="contentpanel">

      <div class="panel">
        <div class="panel-body">
          <%= bootstrap_form_for [:admin, @srv] do |e| %>
            <div class="form-group">
              <%= e.text_field :title, label: '標題' %>
            </div>
            <div class="form-group">
              <%= e.text_area :desc, label: '描述' %>
            </div>
            <%= e.submit '送出', class: 'btn btn-success' %>
          <% end %>
        </div>
      </div>
      <!-- content goes here... -->
    </div><!-- contentpanel -->
  </div><!-- mainpanel -->
</section>