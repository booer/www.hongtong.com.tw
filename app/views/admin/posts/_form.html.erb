<%= bootstrap_form_for [:admin, @post] do |e| %>
	<div class="form-group">
	<label>選擇語系 </label><br>
		<%= e.radio_button :lang, 1, label: "中文", inline: true %>
	  <%= e.radio_button :lang, 0, label: "英文", inline: true %>
  </div>
  <div class="form-group">
		<%= e.text_field :title, label: '文章標題' %>
	</div>
	<div class="form-group">
	<%= e.text_area :content, label: '內容', class: 'textarea' %>
	</div>
	<div class="form-group">
    <% if @post.image.blank? %>
	    <%= e.file_field :image, label: '圖片' %> 
    <% else %>
    	<%= image_tag @post.image_url(:image_s).to_s %>
	 		<%= e.file_field :image, label: '圖片' %>
    <% end %>
	</div>
	<%= e.submit '送出', class: 'btn btn-success' %>
<% end %>
<script type="text/javascript">
  $('.textarea').wysihtml5({toolbar: { color: true } });
</script>
