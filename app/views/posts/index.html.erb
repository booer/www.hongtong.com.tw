<section class="section white">
	<div class="container">
		<div id="page-wrapper" class="row">
			<div id="content" class="col-md-12 col-sm-12 col-xs-12">

				<div class="row">
					<% @posts.each do |f| %>
						<div class="col-md-4 col-sm-4 col-xs-12">
							<div class="blog-list blog-style-2">
								<div class="blog-image">
									<%= image_tag f.image_url(:info_r).to_s %>
									<div class="blog-time">
										<h3><%= f.created_at.strftime('%d').to_s %></h3>
										<p><%= f.created_at.strftime('%Y-%m ').to_s %></p>
									</div><!-- blog-time -->
								</div><!-- end blog-image -->
								<div class="blog-title">
									<h4><%= link_to f.title.slice(0,30), post_path(f) %></a></h4>

									<p><%= f.content.slice(0,155).html_safe %></p>
								</div><!-- end blog-title -->
							</div><!-- end bloglist -->
						</div><!-- end col -->
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>
<div class="backtotop">Scroll to Top</div>
